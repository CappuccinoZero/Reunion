<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.FaceMgViewModel" />
        <variable
            name="activity"
            type="com.example.reunion.view.FaceManager" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        app:layoutDescription="@xml/face_manager_scene"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FaceManager">
        <View
            android:background="@color/color_white"
            android:id="@+id/faceEleView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="47dp"/>
        <FrameLayout
            android:id="@+id/faceMgToolbarView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <ImageView
                android:onClick="@{activity::onBack}"
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginStart="@dimen/back_margin_start"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/fanhui"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="@string/face_mg_title"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/faceMgDeleteView"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:padding="4dp"
                android:onClick="@{activity::onClickAllSelect}"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="@{viewModel.getAllSelectText(viewModel.isAllSelect())}"
                android:layout_gravity="start|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="@{activity.getDeleteTitle(viewModel.deleteCount)}"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:onClick="@{activity::showDeleteDialog}"
                android:padding="4dp"
                android:layout_marginEnd="12dp"
                android:textSize="16sp"
                android:textColor="#FF1744"
                android:text="@string/face_delete_ok"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <View
            android:id="@+id/faceEleView2"
            android:elevation="2dp"
            android:background="@color/color_white"
            app:layout_constraintTop_toBottomOf="@id/faceEleView"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>
        <TextView
            android:id="@+id/faceTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="13dp"
            android:layout_marginTop="68dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人脸信息"
            android:textColor="#ff757575"
            android:textSize="14sp" />
        <androidx.cardview.widget.CardView
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/faceTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/faceCardView"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:layout_constraintDimensionRatio="H,3:2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:textColor="@color/mainColor"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/ripple_button_face_create"
            android:text="@{viewModel.getDeleteButtonText(viewModel.isShowDelete)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/faceCreate"
            android:id="@+id/faceDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:onClick="@{activity::showDialog}"
            android:textColor="@color/color_white"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/login_phone_button_ok"
            android:text="@string/face_create_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/faceCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>