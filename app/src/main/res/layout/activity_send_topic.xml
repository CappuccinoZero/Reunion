<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.reunion.view.SendTopicActivity" />
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.SendTopicViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SendTopicActivity">
        <FrameLayout
            android:elevation="2dp"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <ImageView
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginStart="@dimen/back_margin_start"
                android:onClick="@{activity::onBack}"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/fanhui"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="@{viewModel.title}"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/color_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:text="@={viewModel.topicTitle}"
                    android:layout_marginTop="2dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@null"
                    android:textColor="@color/comment_text_color"
                    android:textSize="20sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:hint="@string/send_topic_edit_title"
                    android:maxLines="1"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/news_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"/>
                <EditText
                    android:gravity="top|start"
                    android:text="@={viewModel.topicContent}"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:hint="@string/send_topic_edit_content"
                    android:maxLines="7"
                    android:minLines="7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="4dp"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"/>
                <androidx.cardview.widget.CardView
                    android:onClick="@{activity::startMap}"
                    android:foreground="@drawable/ripple_rect_borderless"
                    android:background="#fff6f7f9"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="14dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingStart="4dp"
                        android:paddingEnd="8dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/locate"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:textColor="@{viewModel.getTextColor(viewModel.markLocate)}"
                            android:text="@{viewModel.getText(viewModel.markLocate)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <FrameLayout
                    android:onClick="@{activity::onSelectTime}"
                    android:layout_marginTop="18dp"
                    android:foreground="@drawable/ripple_rect_borderless"
                    android:background="@color/color_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="14dp"
                        android:text="@{viewModel.time}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/comment_text_name"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="45dp"
                        android:text="@{viewModel.topicTime}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/point_right"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </FrameLayout>

                <FrameLayout
                    android:onClick="@{activity::onSelectArea}"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/color_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_rect_borderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="14dp"
                        android:text="@{viewModel.arae}"
                        android:textColor="@color/color_black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="45dp"
                        android:text="@{viewModel.topicArea}"
                        android:textColor="@color/comment_text_name"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/point_right" />
                </FrameLayout>

                <FrameLayout
                    android:onClick="@{activity::onSelectAge}"
                    android:layout_marginBottom="10dp"
                    android:foreground="@drawable/ripple_rect_borderless"
                    android:background="@color/color_white"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="14dp"
                        android:text="@{viewModel.age}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/comment_text_name"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="45dp"
                        android:text="@{viewModel.topicAgeView}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/point_right"
                        android:layout_width="22dp"
                        android:layout_height="22dp"/>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:onClick="@{viewModel::onSendTopic}"
            android:textSize="16sp"
            android:textColor="@color/color_white"
            android:layout_marginTop="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:background="@drawable/login_phone_button_ok"
            android:text="@string/send_topic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>