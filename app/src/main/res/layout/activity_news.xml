<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.NewsActivityViewModel" />
        <variable
            name="activity"
            type="com.example.reunion.view.NewsActivity" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/newsAppbar"
                android:layout_width="match_parent"
                android:layout_height="357dp">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:contentScrim="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        app:url="@{viewModel.imageUrl}"
                        app:layout_collapseMode="parallax"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <RelativeLayout
                android:id="@+id/titleView"
                android:paddingBottom="10dp"
                android:background="@drawable/news_gradient_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="357dp">
                <TextView
                    android:layout_above="@id/newsTimeLayout"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="6dp"
                    android:maxLines="2"
                    android:textSize="18sp"
                    android:textColor="@color/color_white"
                    android:text="@{viewModel.title}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:id="@+id/newsTimeLayout"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="13dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:maxLines="2"
                        android:textSize="10sp"
                        android:textColor="@color/color_white"
                        android:text="@{viewModel.getCommentString(viewModel.commentNum)}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="12dp"
                        android:maxLines="1"
                        android:textSize="10sp"
                        android:textColor="@color/color_white"
                        android:text="@{viewModel.time}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/roundView"
                android:background="@drawable/news_round_top"
                android:layout_marginTop="347dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedView"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        layout="@layout/view_news_content"
                        app:src="@{viewModel.src}"
                        app:readNum="@{viewModel.getReadString(viewModel.readNum)}" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:background="@color/windowBackground"
                        android:layout_marginBottom="41dp"
                        android:id="@+id/newsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <RelativeLayout
                android:background="@color/color_white"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="41dp">
                <EditText
                    android:text="@={viewModel.commentContent}"
                    android:hint="@string/comment_edit"
                    android:layout_toStartOf="@id/comment_send"
                    android:maxLines="1"
                    android:paddingStart="13dp"
                    android:paddingEnd="13dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/comment_text_color"
                    android:background="@drawable/comment_background"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"/>
                <TextView
                    android:focusable="true"
                    android:id="@+id/comment_send"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_white"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:text="@string/comment_send"
                    android:textSize="14sp"
                    android:onClick="@{viewModel::onSendClick}"
                    android:clickable="@{viewModel.isCanSend(viewModel.commentContent)}"
                    android:background="@{viewModel.getSendBg(viewModel.commentContent)}"
                    android:layout_width="46dp"
                    android:layout_height="24dp"/>
            </RelativeLayout>
            <View
                android:background="@color/news_line"
                android:layout_marginBottom="41dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <ImageView
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginStart="@dimen/back_margin_start"
                android:onClick="@{activity::onBackClick}"
                android:background="@drawable/ripple_bg_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/back_white"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <FrameLayout
            android:id="@+id/fragmentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</layout>