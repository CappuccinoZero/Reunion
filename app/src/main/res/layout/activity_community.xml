<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.reunion.view.CommunityActivity" />
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.CommunityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CommunityActivity">
        <FrameLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbarLayout"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <ImageView
                android:onClick="@{activity::onBack}"
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginStart="@dimen/back_margin_start"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/fanhui"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <ImageView
                android:visibility="@{viewModel.getMenuVisible(viewModel.data.uId)}"
                android:onClick="@{activity::onClickShowDialog}"
                android:layout_marginEnd="9dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="@dimen/back_margin_start"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/menu"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </FrameLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="47dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/round_bottom_15dp"
                    android:paddingBottom="14dp"
                    android:paddingTop="23dp"
                    android:orientation="horizontal"
                    android:id="@+id/contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="9dp"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="0dp"
                        android:layout_width="39dp"
                        android:layout_height="39dp">
                        <ImageView
                            android:onClick="@{activity::onStartUserTopic}"
                            app:head="@{viewModel.data.header}"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_marginEnd="50dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.data.nickName}"
                            android:textColor="@color/comment_text_name"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.data.content}"
                            android:textColor="@color/comment_text_color"
                            android:textSize="16sp" />
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(0)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(0)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(1)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(1)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(2)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(2)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(3)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(3)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(4)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(4)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(5)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(5)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(6)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(6)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(7)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(7)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="@{viewModel.data.getImageVisible(8)}"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                app:image="@{viewModel.data.getImageFromIndex(8)}"
                                android:scaleType="fitStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.data.formatTime}"
                            android:textColor="@color/comment_text_name"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/comment_read_num"
                    android:layout_marginStart="16dp"
                    android:text="@{viewModel.data.getFormatCommentNum()}"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_below="@id/contentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imEditLayout"
            android:elevation="2dp"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:textCursorDrawable="@drawable/edit_curor"
                android:hint="@string/comment_edit"
                android:id="@+id/communityEdit"
                android:text="@={viewModel.editContent}"
                android:layout_toStartOf="@id/im_send"
                android:maxLines="1"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/comment_text_color"
                android:background="@drawable/comment_background"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_width="match_parent"
                android:layout_height="27dp"/>
            <TextView
                android:onClick="@{viewModel::onSendComment}"
                android:focusable="true"
                android:id="@+id/im_send"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_white"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="@string/comment_send"
                android:textSize="14sp"
                android:clickable="@{viewModel.isCanSend(viewModel.editContent)}"
                android:background="@{viewModel.getSendBg(viewModel.editContent)}"
                android:layout_width="46dp"
                android:layout_height="24dp"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>