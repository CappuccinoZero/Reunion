<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="activity"
            type="com.example.reunion.view.TopicActivity" />
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.TopicViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:elevation="2dp"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <ImageView
                android:onClick="@{activity::onBack}"
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginStart="@dimen/back_margin_start"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/fanhui"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <ImageView
                android:layout_marginEnd="9dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="@dimen/back_margin_start"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/menu"
                android:padding="2dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </FrameLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedView"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="41dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".view.TopicActivity">
                <androidx.cardview.widget.CardView
                    app:cardElevation="1dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardElevation="0dp"
                                app:cardCornerRadius="3dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="13dp"
                                android:layout_width="39dp"
                                android:layout_height="39dp">
                                <ImageView
                                    app:head="@{viewModel.beanData.header}"
                                    android:scaleType="centerCrop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_marginStart="64dp"
                                android:layout_marginTop="13dp"
                                android:textColor="@color/comment_text_color"
                                android:textSize="16sp"
                                android:text="@{viewModel.beanData.nickName}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginStart="64dp"
                                android:layout_marginTop="37dp"
                                android:textColor="@color/comment_text_name"
                                android:textSize="12sp"
                                android:text="@{viewModel.beanData.sendTime}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>
                        <TextView
                            android:text="@{viewModel.beanData.sTitle}"
                            android:layout_marginTop="21dp"
                            android:textStyle="bold"
                            android:textColor="@color/comment_text_color"
                            android:textSize="20sp"
                            android:gravity="start|top"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@{viewModel.beanData.sContent}"
                            android:layout_marginTop="17dp"
                            android:textColor="@color/comment_text_color"
                            android:textSize="16sp"
                            android:gravity="start|top"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:visibility="@{viewModel.pictureNum>=1?View.VISIBLE:View.GONE}"
                            android:layout_marginTop="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" android:orientation="horizontal"
                                app:layout_constraintDimensionRatio="3:1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=1?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,0)}"
                                        android:layout_marginEnd="10dp"
                                        android:scaleType="centerCrop"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=2?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,1)}"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:scaleType="centerCrop"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=3?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,2)}"
                                        android:layout_marginStart="10dp"
                                        android:scaleType="centerCrop"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:visibility="@{viewModel.pictureNum>=4?View.VISIBLE:View.GONE}"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" android:orientation="horizontal"
                                app:layout_constraintDimensionRatio="3:1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=4?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,3)}"
                                        android:layout_marginEnd="10dp"
                                        android:scaleType="centerCrop"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=5?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,4)}"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:scaleType="centerCrop" />
                                </FrameLayout>
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=6?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,5)}"
                                        android:layout_marginStart="10dp"
                                        android:scaleType="centerCrop"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:visibility="@{viewModel.pictureNum>=7?View.VISIBLE:View.GONE}"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" android:orientation="horizontal"
                                app:layout_constraintDimensionRatio="3:1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp">
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=7?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,6)}"
                                        android:layout_marginEnd="10dp"
                                        android:scaleType="centerCrop"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=8?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,7)}"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:scaleType="centerCrop" />
                                </FrameLayout>
                                <FrameLayout
                                    android:visibility="@{viewModel.pictureNum>=9?View.VISIBLE:View.INVISIBLE}"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        app:url="@{viewModel.getPictureUrl(viewModel.beanData,8)}"
                                        android:layout_marginStart="10dp"
                                        android:scaleType="centerCrop"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:layout_marginBottom="6dp"
                            android:textSize="10sp"
                            android:textColor="@color/comment_read_num"
                            android:layout_marginStart="16dp"
                            android:text="@{viewModel.getReadNum(viewModel.beanData)}"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginBottom="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/comment_read_num"
                    android:layout_marginStart="16dp"
                    android:text="@{viewModel.getCommentNum(viewModel.commentNum)}"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/newsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:elevation="4dp"
            android:id="@+id/newsEditView"
            android:layout_gravity="bottom"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="41dp">
            <EditText
                android:text="@={viewModel.commentContent}"
                android:id="@+id/newsEdit"
                android:hint="@string/comment_edit"
                android:layout_toStartOf="@id/comment_send"
                android:maxLines="1"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:textColor="@color/comment_text_color"
                android:background="@drawable/comment_background"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_width="match_parent"
                android:layout_height="27dp"/>
            <TextView
                android:focusable="true"
                android:id="@+id/comment_send"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_white"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:onClick="@{viewModel::onSendClick}"
                android:clickable="@{viewModel.isCanSend(viewModel.commentContent)}"
                android:background="@{viewModel.getSendBg(viewModel.commentContent)}"
                android:text="@string/comment_send"
                android:textSize="14sp"
                android:layout_width="46dp"
                android:layout_height="24dp"/>
        </RelativeLayout>
        <FrameLayout
            android:elevation="4dp"
            android:id="@+id/fragmentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</layout>