<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.HomeViewModel" />
        <variable
            name="activity"
            type="com.example.reunion.view.HomeActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HomeActivity">
        <FrameLayout
            android:layout_marginBottom="56dp"
            android:id="@+id/replaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="vertical"
            android:onClick="@{activity::onCloseSendWindow}"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="56dp"
            android:id="@+id/insertView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:onClick="@{activity::startSendBodyActivity}"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:id="@+id/sendFindBd"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/color_white"
                android:foreground="@drawable/ripple_rect_borderless"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="66dp">
                    <ImageView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/faburenling"
                        android:layout_width="47dp"
                        android:layout_height="47dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="27dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@string/send_find_body"
                            android:textColor="@color/comment_text_color"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/send_find_body_content"
                            android:textColor="@color/comment_text_color"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:onClick="@{activity::startSendPeopleActivity}"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:id="@+id/sendHelp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/color_white"
                android:foreground="@drawable/ripple_rect_borderless"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="66dp">
                    <ImageView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/fabu_1"
                        android:layout_width="47dp"
                        android:layout_height="47dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="27dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@string/send_find_people"
                            android:textColor="@color/comment_text_color"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/send_find_people_content"
                            android:textColor="@color/comment_text_color"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:id="@+id/findFace"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/color_white"
                android:foreground="@drawable/ripple_rect_borderless"
                android:onClick="@{activity::startCameraActivity}"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="66dp">
                    <ImageView
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/saolianshibie"
                        android:layout_width="47dp"
                        android:layout_height="47dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="27dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@string/find_face"
                            android:textColor="@color/comment_text_color"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/find_face_content"
                            android:textColor="@color/comment_text_color"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:menu="@menu/bottom_menu"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/menu_color"
            app:itemIconSize="28dp"
            app:itemTextAppearanceActive="@style/bottomCheckStyle"
            app:itemTextAppearanceInactive="@style/bottomUnCheckStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#FFFF"
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <View
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:focusable="true">
                <ImageView
                    android:id="@+id/showSend"
                    android:onClick="@{activity::onClickSend}"
                    android:clickable="true"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:background="@drawable/menu_send"
                    android:src="@drawable/fabu_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:focusable="true" />
                <View
                    android:id="@+id/sendLine"
                    android:layout_gravity="center"
                    android:background="@drawable/menu_line"
                    android:layout_width="20dp"
                    android:layout_height="3dp"/>
            </LinearLayout>
            <View
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>