<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.SettingViewModel" />
        <variable
            name="activity"
            type="com.example.reunion.view.SettingActivity" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:elevation="2dp"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <ImageView
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginStart="@dimen/back_margin_start"
                android:onClick="@{activity::onBackClick}"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/fanhui"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/color_black"
                android:text="@string/setting_message"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/setting_approve"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="14dp"
                    android:textColor="@color/comment_text_name"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:onClick="@{activity::onChangeHeader}"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="82dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="6dp"
                                app:cardElevation="0dp"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="56dp"
                                android:layout_height="56dp">
                                <ImageView
                                    app:head="@{viewModel.header}"
                                    android:scaleType="centerCrop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </androidx.cardview.widget.CardView>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:onClick="@{activity::onChangeName}"
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.name}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:onClick="@{activity::onChangeRealName}"
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_real_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.realName}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:onClick="@{activity::onChangeSignature}"
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/signature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.getSignatureString(viewModel.signature)}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{activity::pickSex}"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.getSexString(viewModel.sex)}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{activity::pickTime}"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.birthday}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{activity::pickArea}"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.getAreaString(viewModel.province,viewModel.city,viewModel.district)}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:text="@string/setting_basic"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="14dp"
                    android:textColor="@color/comment_text_name"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_uid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.uid}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_we_chat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.weChat}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:foreground="@drawable/ripple_rect_borderless"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_width="match_parent"
                            android:layout_height="56dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/color_black"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_qq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@{viewModel.qq}"
                                android:textSize="14sp"
                                android:textColor="@color/comment_text_name"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right"
                                android:layout_width="22dp"
                                android:layout_height="22dp"/>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@color/color_white"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/ripple_rect_borderless">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="25dp"
                                android:text="@string/setting_phone"
                                android:textColor="@color/color_black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|bottom"
                                android:layout_marginEnd="45dp"
                                android:layout_marginBottom="24dp"
                                android:text="@{viewModel.phone}"
                                android:textColor="@color/comment_text_name"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/point_right" />
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
