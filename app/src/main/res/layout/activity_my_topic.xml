<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.MyTopicViewModel" />
        <variable
            name="activity"
            type="com.example.reunion.view.MyTopicActivity" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MyTopicActivity">
        <FrameLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:onClick="@{activity::onBack}"
                android:layout_marginTop="@dimen/back_margin_top"
                android:layout_marginStart="@dimen/back_margin_start"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/fanhui"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <ImageView
                android:onClick="@{activity::onClickShowDialog}"
                android:layout_marginEnd="12dp"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/back_margin_start"
                android:background="@drawable/ripple_back_oval"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/menu"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:layout_width="55dp"
                android:layout_height="55dp">
                <ImageView
                    app:head="@{viewModel.header}"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:maxLines="1"
                android:layout_marginTop="50dp"
                android:layout_marginStart="88dp"
                android:textColor="@color/comment_text_color"
                android:textSize="20sp"
                android:text="@{viewModel.nickName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:maxLines="1"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="88dp"
                android:textColor="@color/comment_text_name"
                android:textSize="14sp"
                android:text="@{viewModel.user.getSignature(viewModel.signature)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout
            android:background="@drawable/my_topic_frame"
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <com.example.reunion.customize.tab.TabLayout
                android:id="@+id/homeTabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:tabBackground="@android:color/transparent"
                app:tabIndicator="@drawable/mytopic_tab_indicator"
                app:tabIndicatorColor="@color/mainColor"
                app:tabIndicatorHeight="50dp"
                app:tabMaxWidth="0dp"
                app:tabMinWidth="0dp"
                app:tabMarginBottom="@dimen/my_tab_indicator_bottom"
                app:tabPaddingEnd="6dp"
                app:tabPaddingStart="6dp"
                app:tabRippleColor="@android:color/transparent"
                app:tabTextAppearance="@style/NewsTabTextStyle"
                app:tabTextColor="#757575" />
        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/mViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>