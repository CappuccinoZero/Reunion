<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.example.reunion.view.TopicSearchActivity" />
        <variable
            name="viewModel"
            type="com.example.reunion.view_model.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.TopicSearchActivity">
        <EditText
            app:layout_constraintTop_toTopOf="parent"
            android:textCursorDrawable="@drawable/edit_curor"
            android:text="@={viewModel.keyword}"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:paddingStart="30dp"
            android:id="@+id/searchEdit"
            android:paddingEnd="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="55dp"
            android:background="@drawable/search_background"
            android:layout_width="match_parent"
            android:layout_height="26dp" />
        <ImageView
            app:layout_constraintTop_toTopOf="@id/searchEdit"
            app:layout_constraintStart_toStartOf="@id/searchEdit"
            app:layout_constraintBottom_toBottomOf="@id/searchEdit"
            android:id="@+id/searchImg"
            android:layout_marginStart="7dp"
            android:src="@drawable/sousuo"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/searchEdit"
            app:layout_constraintStart_toEndOf="@id/searchEdit"
            app:layout_constraintBottom_toBottomOf="@id/searchEdit"
            android:onClick="@{activity::onBack}"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_cancel"
            android:textColor="#ff757575"
            android:textSize="13sp"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/searchEdit"
            app:layout_constraintStart_toStartOf="@id/searchEdit"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_history"
            android:textColor="@color/color_black"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/textHistory"
            app:layout_constraintTop_toBottomOf="@id/searchEdit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{activity::setMaxRow}"
            android:text="@string/search_open"
            android:textSize="14sp"
            />
        <com.nex3z.flowlayout.FlowLayout
            app:flChildSpacing="8dp"
            app:flMaxRows="2"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp"
            android:id="@+id/flowLayout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:onClick="@{viewModel::onClearKeyword}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flowLayout"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/clear"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:layout_marginStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_clear"
                android:textColor="#ff757575"
                android:textSize="14sp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>