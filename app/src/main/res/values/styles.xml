<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/color_black</item>
    </style>
    <style name="CircleCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/circle_check_box</item>
    </style>

    <style name="DialogAnim" parent="android:Animation">
        <!--//进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/dialog_anim_in</item>
        <!--//退出时的动画-->
        <item name="android:windowExitAnimation">@anim/dialog_anim_out</item>
    </style>

    <style name="CustomizeDialog" parent="AppTheme">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="bottomUnCheckStyle">
        <item name="android:textColor">@color/menu_unchecked</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="bottomCheckStyle">
        <item name="android:textColor">@color/menu_checked</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NewsTabTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="snakeTransTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
