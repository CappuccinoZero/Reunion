<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/color_black</item>
    </style>
    <style name="CircleCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/circle_check_box</item>
    </style>

    <style name="bottomUnCheckStyle">
        <item name="android:textColor">@color/menu_unchecked</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="bottomCheckStyle">
        <item name="android:textColor">@color/menu_checked</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NewsTabTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="snakeTransTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
