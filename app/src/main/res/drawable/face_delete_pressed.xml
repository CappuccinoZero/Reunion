<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="#FF6868"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="1dp"
        android:bottom="1dp"
        android:start="1dp"
        android:end="1dp"
        android:width="12dp"
        android:gravity="center"
        android:height="12dp">
        <shape android:shape="oval">
            <solid android:color="#ccffffff" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:width="8dp"
        android:height="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/mainColor" />
        </shape>
    </item>
</ripple>