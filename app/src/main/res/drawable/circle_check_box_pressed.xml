<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="#FF6868"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape
            android:shape="oval"
            android:dither="true">
            <stroke
                android:width="1dp"
                android:color="#B7B7B7" />
            <solid android:color="#00000000"/>
            <size
                android:height="15dp"
                android:width="15dp"/>
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape
            android:dither="true"
            android:shape="oval">
            <solid android:color="#FF6868"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</ripple>